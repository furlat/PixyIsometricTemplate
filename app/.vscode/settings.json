{
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.includeLanguages": {
    "html": "html",
    "javascript": "javascript", 
    "typescript": "typescript",
    "css": "css"
  },
  "tailwindCSS.experimental.classRegex": [
    "class\\s*=\\s*[\"']([^\"']*)[\"']",
    "className\\s*=\\s*[\"']([^\"']*)[\"']"
  ],
  "tailwindCSS.rootFontSize": 16,
  "tailwindCSS.validate": true,
  "tailwindCSS.lint.cssConflict": "warning",
  "tailwindCSS.lint.invalidApply": "error",
  "tailwindCSS.lint.invalidScreen": "error",
  "tailwindCSS.lint.invalidVariant": "error",
  "tailwindCSS.lint.invalidConfigPath": "error",
  "tailwindCSS.lint.invalidTailwindDirective": "error",
  "tailwindCSS.lint.recommendedVariantOrder": "warning",
  "css.validate": false,
  "css.lint.validProperties": [],
  "css.lint.unknownAtRules": "ignore",
  "css.lint.unknownProperties": "ignore",
  "css.lint.duplicateProperties": "ignore",
  "css.lint.emptyRulesets": "ignore",
  "css.lint.importStatement": "ignore",
  "css.lint.boxModel": "ignore",
  "css.lint.universalSelector": "ignore",
  "css.lint.zeroUnits": "ignore",
  "css.lint.fontFaceProperties": "ignore",
  "css.lint.hexColorLength": "ignore",
  "css.lint.argumentsInColorFunction": "ignore",
  "css.lint.unknownVendorSpecificProperties": "ignore",
  "css.lint.ieHack": "ignore",
  "css.lint.vendorPrefix": "ignore",
  "css.lint.propertyIgnoredDueToDisplay": "ignore",
  "css.lint.important": "ignore",
  "css.lint.float": "ignore",
  "css.lint.idSelector": "ignore",
  "tailwindCSS.emmetCompletions": true,
  "editor.quickSuggestions": {
    "strings": true
  },
  "[tailwindcss]": {
    "editor.suggest.insertMode": "replace"
  }
}